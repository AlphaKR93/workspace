{
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ESNEXT",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext",
      "esnext.array",
      "esnext.asynciterable",
      "esnext.symbol"
    ],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}